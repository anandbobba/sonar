<?xml version="1.0"?>
<sdf version="1.7">
  <world name="whistle_world">
    
    <!-- Physics -->
    <physics type="ode">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1.0</real_time_factor>
      <real_time_update_rate>1000</real_time_update_rate>
    </physics>

    <!-- Scene: ambient, background and fog for depth -->
    <scene>
      <ambient>0.45 0.45 0.5 1</ambient>
      <background>0.6 0.7 0.85 1</background>
      <shadows>true</shadows>
    </scene>

    <!-- Directional sun-like light with shadows -->
    <light name="sun_light" type="directional">
      <cast_shadows>true</cast_shadows>
      <!-- position high above, orientation tilts down -->
      <pose>0 0 10 0.6 -0.4 0</pose>
      <diffuse>0.95 0.9 0.85 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
      <attenuation>
        <range>1000</range>
      </attenuation>
    </light>

    <!-- Fog for atmospheric depth (subtle) -->
    <fog>
      <color>0.6 0.7 0.85</color>
      <type>linear</type>
      <density>0.003</density>
      <start>8</start>
      <end>40</end>
    </fog>

    <!-- Textured/colored ground (uses built-in Gazebo materials) -->
    <model name="textured_ground">
      <static>true</static>
      <pose>0 0 0 0 0 0</pose>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <material>
            <script>
              <uri>file://media/materials/scripts/gazebo.material</uri>
              <name>Gazebo/Grass</name>
            </script>
            <ambient>0.36 0.44 0.29 1</ambient>
            <diffuse>0.36 0.44 0.29 1</diffuse>
            <specular>0.03 0.03 0.03 1</specular>
          </material>
        </visual>
      </link>
    </model>

    <!-- Add a couple of simple props to make the scene more lively -->
    <model name="crate_1">
      <static>true</static>
      <pose>-1.5 1 0.25 0 0 0</pose>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>0.5 0.5 0.5</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>0.5 0.5 0.5</size>
            </box>
          </geometry>
          <material>
            <ambient>0.45 0.35 0.25 1</ambient>
            <diffuse>0.45 0.35 0.25 1</diffuse>
            <specular>0.05 0.05 0.05 1</specular>
          </material>
        </visual>
      </link>
    </model>

    <model name="crate_2">
      <static>true</static>
      <pose> -2.5 -1 0.35 0 0 0</pose>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>0.7 0.4 0.7</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>0.7 0.4 0.7</size>
            </box>
          </geometry>
          <material>
            <ambient>0.5 0.45 0.4 1</ambient>
            <diffuse>0.5 0.45 0.4 1</diffuse>
            <specular>0.04 0.04 0.04 1</specular>
          </material>
        </visual>
      </link>
    </model>

    <!-- Walls removed to make the scene more open and realistic -->

    <!-- Realistic obstacles - positioned away from the whistle source -->
    
    <!-- Tree 1 -->
    <model name="tree_1">
      <static>true</static>
      <pose>-2 4 0 0 0 0</pose>
      <link name="trunk">
        <collision name="collision">
          <geometry>
            <cylinder>
              <radius>0.3</radius>
              <length>3.0</length>
            </cylinder>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.3</radius>
              <length>3.0</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.4 0.3 0.2 1</ambient>
            <diffuse>0.4 0.3 0.2 1</diffuse>
          </material>
        </visual>
      </link>
      <link name="foliage">
        <pose>0 0 2.5 0 0 0</pose>
        <visual name="visual">
          <geometry>
            <sphere>
              <radius>1.2</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>0.2 0.5 0.2 1</ambient>
            <diffuse>0.2 0.6 0.2 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Rock cluster -->
    <model name="rock_cluster">
      <static>true</static>
      <pose>1 -2.5 0.3 0 0 0.5</pose>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>1.2 0.8 0.6</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>1.2 0.8 0.6</size>
            </box>
          </geometry>
          <material>
            <ambient>0.5 0.5 0.5 1</ambient>
            <diffuse>0.6 0.6 0.6 1</diffuse>
            <specular>0.1 0.1 0.1 1</specular>
          </material>
        </visual>
      </link>
    </model>

    <!-- Bench -->
    <model name="bench">
      <static>true</static>
      <pose>-3 -2 0.25 0 0 1.57</pose>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>1.5 0.5 0.5</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>1.5 0.5 0.5</size>
            </box>
          </geometry>
          <material>
            <ambient>0.6 0.4 0.3 1</ambient>
            <diffuse>0.6 0.4 0.3 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- VIRTUAL WHISTLE SOURCE (Visual Marker) -->
    <model name="whistle_source">
      <static>true</static>
      <pose>3 3 0.5 0 0 0</pose>
      <link name="link">
        <visual name="visual">
          <geometry>
            <sphere>
              <radius>0.2</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>1.0 1.0 0.0 1</ambient>
            <diffuse>1.0 1.0 0.0 1</diffuse>
            <emissive>1.0 1.0 0.0 1</emissive>
          </material>
        </visual>
        <!-- Pulsing light to make it visible -->
        <light name="whistle_light" type="point">
          <pose>0 0 0 0 0 0</pose>
          <diffuse>1 1 0 1</diffuse>
          <specular>1 1 0 1</specular>
          <attenuation>
            <range>5</range>
            <linear>0.1</linear>
            <constant>0.2</constant>
            <quadratic>0.01</quadratic>
          </attenuation>
          <cast_shadows>true</cast_shadows>
        </light>
      </link>
    </model>

    <!-- Text label for whistle source -->
    <model name="whistle_label">
      <static>true</static>
      <pose>3 3 1.0 0 0 0</pose>
      <link name="link">
        <visual name="visual">
          <geometry>
            <box>
              <size>0.01 0.01 0.01</size>
            </box>
          </geometry>
        </visual>
      </link>
    </model>

  </world>
</sdf>
